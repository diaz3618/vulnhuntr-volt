{
  // GitHub Copilot Configuration
  // Ensures the agent orchestration system is always available
  
  // Make Copilot always reference the main agent orchestrator
  "github.copilot.advanced": {
    "contextFiles": [
      ".agents/AGENT.md"
    ]
  },
  
  // Editor settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  
  // File associations
  "files.associations": {
    "*.md": "markdown",
    "AGENT.md": "markdown",
    "SKILL.md": "markdown"
  },
  
  // Exclude unnecessary files from search
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/.voltagent/cache": true
  },
  
  // TypeScript settings
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  
  // Python settings (for Vulnhuntr)
  "python.analysis.typeCheckingMode": "basic",
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "python.formatting.provider": "none",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  
  // Terminal settings
  "terminal.integrated.env.linux": {},
  "terminal.integrated.env.osx": {},
  "terminal.integrated.env.windows": {}
}

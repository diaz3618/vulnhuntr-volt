{
  "name": "vulnhuntr-volt",
  "version": "0.1.0",
  "description": "AI-powered Python vulnerability scanner using VoltAgent workflows",
  "type": "module",
  "bin": {
    "vulnhuntr": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch --env-file=.env ./src",
    "dev:server": "tsx watch --env-file=.env ./src/index.ts",
    "build": "tsdown",
    "start": "node dist/index.js",
    "start:server": "node dist/index.js",
    "vulnhuntr": "tsx --env-file=.env ./src/cli.ts",
    "scan": "tsx --env-file=.env ./src/cli.ts",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "typecheck": "tsc --noEmit",
    "volt": "volt",
    "test": "vitest run",
    "test:e2e": "vitest run tests/",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@voltagent/cli": "^0.1.10",
    "@voltagent/core": "^2.0.0",
    "@voltagent/libsql": "^2.0.0",
    "@voltagent/logger": "^2.0.0",
    "@voltagent/server-hono": "^2.0.0",
    "ai": "^6.0.0",
    "dotenv": "^16.4.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.5",
    "tsdown": "^0.15.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.19.0"
  }
}